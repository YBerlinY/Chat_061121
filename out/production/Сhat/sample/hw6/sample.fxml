<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:controller="sample.hw6.Controller"
      xmlns:fx="http://javafx.com/fxml" spacing="5">
    <padding>
        <Insets bottom="5" right="5" left="5" top="5"/>
    </padding>

    <TextArea  fx:id="textArea"  VBox.vgrow="ALWAYS"  editable="false" />
    <HBox spacing="5">
        <TextField fx:id="textField" HBox.hgrow="ALWAYS"/>
        <Button text="Send"  defaultButton="false" onAction="#btnSendClick"/>
    </HBox>


</VBox>
